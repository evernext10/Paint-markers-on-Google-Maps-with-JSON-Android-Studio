<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.moviles.jrsdevelopers.mapafinal.MapsActivity">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        tools:context="com.jrsdevelopers.ever.mapa.MapsActivity"
        android:layout_width="400sp"
        android:layout_height="380sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etBuscar"
        android:gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:hint="@string/que_deseas_buscar"
        android:textStyle="normal|bold"
        android:textSize="22sp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btBuscar"
        tools:text="BUSCAR"
        android:hint="BUSCAR"
        android:layout_below="@+id/etBuscar"
        android:layout_alignParentStart="true"
        android:layout_marginTop="18dp" />


</RelativeLayout>
